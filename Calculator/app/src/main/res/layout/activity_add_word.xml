<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <EditText
        android:id="@+id/editTextForWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter a word"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editTextForMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/editTextForWord"
        android:layout_below="@+id/editTextForWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter a meaning for a given word"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonAddWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextForMeaning"
        android:layout_marginTop="10dp"
        android:text="Add"
        android:layout_centerHorizontal="true"
        android:onClick="addWord"/>

</RelativeLayout>
