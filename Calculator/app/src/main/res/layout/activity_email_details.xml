<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp">

    <TextView
        android:id="@+id/emailSenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/emailCCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailSenderTextView"
        android:layout_alignStart="@+id/emailSenderTextView"
        android:layout_below="@+id/emailSenderTextView"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/emailSubjectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailCCTextView"
        android:layout_alignStart="@+id/emailCCTextView"
        android:layout_below="@+id/emailCCTextView"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/emailContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailSubjectTextView"
        android:layout_alignStart="@+id/emailSubjectTextView"
        android:layout_below="@+id/emailSubjectTextView"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/goBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailContentTextView"
        android:layout_marginTop="16dp"
        android:onClick="goBackToEmailsActivity"
        android:text="Go Back" />
</RelativeLayout>
